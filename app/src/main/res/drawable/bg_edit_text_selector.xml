<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/edit_text_bg" />
                    <corners android:radius="4dp" />
                    <stroke android:width="1dp" android:color="@color/clickable_text" /> <!-- Set the outline color -->
                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">

                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <solid android:color="@color/edit_text_bg" /> <!-- Set the inner color -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list>
            <item>

                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">

                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <solid android:color="@color/edit_text_bg" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
